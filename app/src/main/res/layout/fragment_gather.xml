<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sci.wumu.wukong.fragment.GatherFragment"
    android:background="#cae4f5">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#57e3d8"
        android:id="@+id/gatherline1">
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/tuisong"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/tuisong"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/shezhi"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_settings_black_24dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gatherline1"
        android:id="@+id/bluetext"
        android:text="未连接"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"/>


    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/bluetext"
        android:layout_toLeftOf="@+id/bluetext"
        android:id="@+id/imageViewblu"
        android:src="@drawable/bluedis"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gatherline1"
        android:textColor="@color/black"
        android:text="净化量"
        android:textSize="20sp"
        android:id="@+id/textView2"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/textView2"
        android:layout_margin="20dp"
        android:background="#CCCCCC"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/textView2"
        android:id="@+id/gatherline2"
        android:background="@drawable/jishuqigai"
        android:padding="20dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/shiwan"
            android:text="0"
            android:textSize="50sp"
            android:textColor="#666666"
            android:layout_weight="4"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#ffffff"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_gravity="center"



            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/myriabit"
            android:text="0"
            android:textSize="50sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#ffffff"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_gravity="center"
            android:layout_weight="4"

            />



        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/thousand"
            android:text="0"
            android:textSize="50sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#ffffff"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_gravity="center"
            android:layout_weight="4"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/hundred"
            android:text="0"
            android:textSize="50sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="4"
            android:background="#ffffff"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="center"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="."
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:gravity=""

            android:layout_gravity="center"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/decade"
            android:text="0"
            android:textSize="50sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="3dp"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/unit"
            android:text="0"
            android:textColor="#666666"
            android:background="#ffffff"
            android:textSize="50sp"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_gravity="center"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text=""/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tixing"
        android:layout_below="@+id/gatherline2"
        android:text=""
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"

     />



    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/zhuanghuan1"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>

